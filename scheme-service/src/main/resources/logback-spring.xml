<configuration>
    <conversionRule conversionWord="sortedMDC" class="uk.gov.justice.laa.fee.scheme.logback.SortedMdcConverter"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %5p ${PID:-} --- [${APPLICATION_NAME}] [%15.15t] %-40.40logger{39} : %m %sortedMDC %n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>